<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/waPrimary</item>
        <item name="colorPrimaryDark">@color/waPrimaryDark</item>
        <item name="colorAccent">@color/waAccent</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="AppTheme.Launcher" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/waAccent</item>
        <item name="fab_colorPressed">@color/waPrimary</item>
        <item name="fab_colorRipple">@color/waPrimary</item>
    </style>
</resources>
